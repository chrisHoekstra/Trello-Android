<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chrishoekstra.trello"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity
            android:label="@string/app_name"
            android:name="com.chrishoekstra.trello.activity.MainActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.chrishoekstra.trello.activity.BoardActivity" />
        <activity android:name="com.chrishoekstra.trello.activity.BoardActivityGroup" />
        <activity android:name="com.chrishoekstra.trello.activity.BoardListActivity" />
        <activity android:name="com.chrishoekstra.trello.activity.OrganizationActivity" />
        <activity android:name="com.chrishoekstra.trello.activity.CardActivity" />
        <activity android:name="com.chrishoekstra.trello.activity.DashboardActivity" />
        <activity android:name="com.chrishoekstra.trello.activity.NotificationsActivity" />
        <activity android:name="com.chrishoekstra.trello.activity.ProfileActivity" />
        <activity android:name="com.chrishoekstra.trello.activity.TrelloTabActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>